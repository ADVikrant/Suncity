@model SunCity.DAL.TblMembershipPlan
@{
    ViewBag.Title = "TestMembershipPlan";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@if (TempData["alertstatus"] == "Success")
{
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <strong>Membership Plan</strong> added successfully.
                               
    </div>
}
@if (TempData["alertstatus"] == "Error")
{
    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <strong>Oh snap!</strong> Something went wrong. Please try submitting again.
                               
    </div>
}
<div class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-btns">
                <a href="" class="panel-minimize tooltips" data-toggle="tooltip" title="Minimize Panel"><i class="fa fa-minus"></i></a>
                @*<a href="" class="panel-close tooltips" data-toggle="tooltip" title="Close Panel"><i class="fa fa-times"></i></a>*@
            </div>
            <!-- panel-btns -->
            <h4 class="panel-title">Add Membership Plan</h4>
            <p>This form is used to add Membership Plan.</p>
        </div>
        @using (Html.BeginForm("AddMembershipPlan", "Function", FormMethod.Post, new { id = "Addmembershipplan" }))
        {  
            @Html.HiddenFor(x => x.MembershipPlanId)

            <div class="panel-body">
                <div class="errorForm"></div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label">Membership Plan</label>
                            @Html.TextBoxFor(x => x.MembershipPlanName, new { @class = "form-control", @title = "Membership Plan is required!", @required = "required" })
                        </div>
                        <!-- form-group -->
                    </div>
                    <!-- col-sm-6 -->
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label">Membership Period</label>
                            @Html.TextBoxFor(x => x.MembershipPeriod, new { @class = "form-control", @title = "Membership Period is required!", @required = "required", @onkeypress = "return isNumberKey(event,this.id)" })
                        </div>
                        <!-- form-group -->
                    </div>
                </div>
               <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label">Amount</label>
                            @Html.TextBoxFor(x => x.Amount, new { @class = "form-control", @title = "Membership Amount is required!", @required = "required" })
                        </div>
                        <!-- form-group -->
                    </div>
                    <!-- col-sm-6 -->
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label">No. of Main</label>
                            @Html.TextBoxFor(x => x.NOFCouple, new { @class = "form-control", @title = "No. of couple is required!", @required = "required", @onkeypress = "return isNumberKey(event,this.id)", @Value = "0" })
                        </div>
                        <!-- form-group -->
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label">No. of Spouse</label>
                            @Html.TextBoxFor(x => x.NOFAdults, new { @class = "form-control", @title = "No. of Adults are required!", @required = "required", @Value = "0" })
                        </div>
                        <!-- form-group -->
                    </div>
                    <!-- col-sm-6 -->
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label">No. of Child</label>
                            @Html.TextBoxFor(x => x.NOFChilds, new { @class = "form-control", @title = "No. of child is required!", @required = "required", @onkeypress = "return isNumberKey(event,this.id)", @Value = "0" })
                        </div>
                        <!-- form-group -->
                    </div>
                </div>
            </div>
            <!-- panel-body -->
            <div class="panel-footer">
                <button class="btn btn-primary" type="submit">Save</button>
            </div>
            <!-- panel-footer -->
        }
    </div>
    <!-- panel -->
</div>
<!-- col-md-6 -->

<script src="~/Content/js/jquery-1.11.1.min.js"></script>
<script>
    $(document).ready(function () {

        // Error Message In One Container
        $("#Addmembershipplan").validate({
            errorLabelContainer: $("#Addmembershipplan div.errorForm")
        });
    });
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }
        </script>

